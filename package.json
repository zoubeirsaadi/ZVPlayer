{
  "name": "zvplayer",
  "version": "1.0.0",
  "description": "A reusable video player SDK",
  "keywords": [
    "video",
    "sdk",
    "player",
    "ZVPlayer",
    "shaka player",
    "dash",
    "hls"
  ],
  "author": "Zoubeir SAADI",
  "license": "MIT",
  "main": "dist/zv-player-sdk.bundle.js",
  "type": "module",
